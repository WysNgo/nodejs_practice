<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS</title>
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
    
    
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload">Upload</a>
    </div>
      
        <h2>List user</h2>
        <div class="w3-container">
           <table class="w3-table-all w3-hoverable">
              <thead>
                <tr class="w3-light-grey">
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i = 0; i < dataUser.length;i++ ) { %>
                    <tr>
                        <td>
                            <%= dataUser[i].id%>
                        </td>
                        <td>
                            <%= dataUser[i].firstName%>
                        </td>
                        <td>
                            <%= dataUser[i].lastName%>
                        </td>
                        
                        <td >
                            <div class="btnContainer">
                                <div> 
                                    <form class="frmData" action="">
                                        <button class="btnDetail" ><a href="/detail/user/<%= dataUser[i].id%>" >Detail</a></button>
                                    </form>
                                </div>
                                <div>
                                    <form class="frmEdit" action="/editUser/<%= dataUser[i].id%>" method="GET">
                                        <button class="btnEdit" type="submit" >Edit</button>
                                    </form>
                                </div>
                                <div>
                                    <form class="frmDel" action="/deleteUser" method="POST">
                                        <input type="text" hidden value="<%= dataUser[i].id%>" name="userId">
                                        <button class="btnDel" type="submit" >Delete</button>
                                    </form>
                                </div>  
                            </div>
                            
                        </td> 
                    </tr>
                <% } %>
              </tbody>
              
            </table>
          </div>
        </div>
    
        

      
</body>
</html>